#!/bin/bash
# crate 2 right panes for front / back console
tmux split-window   -v
tmux resize-pane -t 0 -U 40
tmux select-pane  -t 0
tmux send-keys -t 0 'cd ./frontend && yarn && yarn start' C-m

tmux select-pane  -t 1
tmux send-keys -t 1 'cd ./backend && bundle install && bundle exec rails s' C-m

